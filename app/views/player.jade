doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title remote-player
    //- != css('styles')

  body(data-view="#{view}")
    .chan
      input#channel(placeholder="channel")
      button#connect Connect
    video#video(src="http://pygmael.s3.amazonaws.com/oceans.mp4" controls)
    .controls
        button(id="play") Play
        button(id="pause") Pause

    | <script>
    | document.write('<script src=' +
    | ('__proto__' in {} ? 'http://zeptojs.com/zepto.min.js' : 'http://code.jquery.com/jquery-1.7.2.min.js') +
    | '><\/script>')
    | </script>

    script(src="/socket.io/socket.io.js")
    != js('player')
